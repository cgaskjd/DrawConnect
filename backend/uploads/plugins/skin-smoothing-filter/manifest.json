{
  "id": "skin-smoothing-filter",
  "name": "Skin Smoothing Filter",
  "version": "1.0.0",
  "description": "Professional skin smoothing and beautification filter for portrait photos. Automatically detects skin tones and applies natural smoothing while preserving texture details.",
  "shortDescription": "Professional portrait skin smoothing filter",
  "author": "DrawConnect Community",
  "category": "filters",
  "tags": ["portrait", "skin", "beauty", "smoothing", "retouch"],
  "main": "main.js",
  "icon": "icon.svg",
  "minAppVersion": "0.1.0",
  "permissions": ["canvas:read", "canvas:write", "layer:read"],
  "settings": {
    "smoothingStrength": {
      "type": "number",
      "default": 50,
      "min": 0,
      "max": 100,
      "label": "Smoothing Strength"
    },
    "preserveDetails": {
      "type": "boolean",
      "default": true,
      "label": "Preserve Skin Details"
    },
    "skinToneRange": {
      "type": "select",
      "default": "auto",
      "options": ["auto", "light", "medium", "dark"],
      "label": "Skin Tone Range"
    }
  }
}
