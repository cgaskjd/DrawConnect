{
  "id": "com.example.sample-filter",
  "name": "示例滤镜插件",
  "version": "1.0.0",
  "apiVersion": "1.0",
  "description": "这是一个示例滤镜插件，展示如何创建 DrawConnect 插件",
  "author": {
    "name": "DrawConnect Team",
    "email": "dev@example.com",
    "url": "https://example.com"
  },
  "license": "MIT",
  "type": "filter",
  "runtime": "javascript",
  "main": "main.js",
  "permissions": [
    "canvas:read",
    "canvas:write",
    "filter:register"
  ],
  "capabilities": {
    "brushes": [],
    "filters": [
      {
        "id": "sample-grayscale",
        "name": "灰度化",
        "category": "颜色调整"
      },
      {
        "id": "sample-sepia",
        "name": "复古色调",
        "category": "颜色调整"
      }
    ],
    "tools": [],
    "panels": []
  },
  "settings": {
    "schema": {
      "type": "object",
      "properties": {
        "intensity": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "default": 50
        }
      }
    }
  },
  "locales": ["zh", "en"],
  "keywords": ["filter", "grayscale", "sepia"],
  "category": "Filters"
}
